<layout id="MainLayout">
    <bitmap id ="icon" x="center" y="120" filename="../drawables/remootio.png"> </bitmap>
    <button x="0" y="100" width="50" height="50" background="Graphics.COLOR_WHITE" behavior="checkIP">
    	<state id="stateDefault" color="Graphics.COLOR_WHITE" />
    </button>
    <button x = "200" y = "100" width="50" height = "50" background = "Graphics.COLOR_RED" behavior="switchDoor">
        <state id="stateDefault" color="Graphics.COLOR_RED"/>
        <state id="stateSelected" color = "Graphics.COLOR_BLUE"/>
        <state id="stateHighlighted" color ="Graphics.COLOR_YELLOW"/>
        <state id="stateDisabled" color = "Graphics.COLOR_BLACK"/>
    </button>
    <label id="state" text="State information" x="center" y="50" justification="Graphics.TEXT_JUSTIFY_CENTER"/>
</layout>